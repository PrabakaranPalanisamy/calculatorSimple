<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">
    <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonclear"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonnegate"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:id="@+id/txt_symbol"
            app:layout_constraintEnd_toStartOf="@+id/constraintLayout"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/edt_result" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:focusable="false"
            android:editable="false"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/edt_input"
            android:gravity="center_horizontal"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/edt_input"
            app:layout_constraintBaseline_toBaselineOf="@+id/edt_result"
            app:layout_constraintStart_toEndOf="@+id/edt_result" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:gravity="center_horizontal" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_input" android:id="@+id/constraintLayout"
            app:layout_constraintHorizontal_bias="0.50">

        <Button
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button8"
                app:layout_constraintBaseline_toBaselineOf="@+id/button7"
                app:layout_constraintStart_toEndOf="@+id/button7" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonadd"
                app:layout_constraintStart_toEndOf="@+id/buttonequals"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonsubtract"/>
        <Button
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button6" app:layout_constraintStart_toEndOf="@+id/button5"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/button9"/>
        <Button
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttondivide" app:layout_constraintStart_toEndOf="@+id/button9"
                app:layout_constraintBaseline_toBaselineOf="@+id/button9" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
        />
        <Button
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button7"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="-"
                android:layout_width="86dp"
                android:layout_height="46dp"
                android:id="@+id/buttonsubtract"
                app:layout_constraintStart_toEndOf="@+id/button3"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonmultiply"
        />
        <Button
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonequals"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/button3" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/buttondot"/>
        <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button5" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/button8" app:layout_constraintStart_toEndOf="@+id/button4"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
        <Button
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button0"
                app:layout_constraintStart_toStartOf="@+id/button1"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/button1"/>
        <Button
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button9"
                app:layout_constraintBaseline_toBaselineOf="@+id/button8"
                app:layout_constraintStart_toEndOf="@+id/button8"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
        <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                app:layout_constraintStart_toEndOf="@+id/button2"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/button6"/>
        <Button
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonmultiply"
                app:layout_constraintStart_toEndOf="@+id/button6"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttondivide"
        />
        <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button1" app:layout_constraintStart_toStartOf="@+id/button4"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/button4"/>
        <Button
                android:text="."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttondot" app:layout_constraintStart_toEndOf="@+id/button0"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/button2"/>
        <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2" app:layout_constraintStart_toEndOf="@+id/button1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/button5"/>
        <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button4" app:layout_constraintStart_toStartOf="@+id/button7"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/button7"/>
    </android.support.constraint.ConstraintLayout>
    <Button
            android:text="NEG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonnegate" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>