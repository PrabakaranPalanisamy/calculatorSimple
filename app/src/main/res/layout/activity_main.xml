<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity" android:minWidth="48dp">
    <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonclear"
            android:minWidth="48dp" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/buttonmultiply"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonnegate"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/edt_result" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:focusable="false"
            android:editable="false"
            android:layout_marginLeft="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/edt_input" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_result" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            app:layout_constraintStart_toStartOf="@+id/button1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button1"
            android:minWidth="48dp"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintStart_toEndOf="@+id/button1" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button5"
            android:minWidth="48dp"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button6"
            android:minWidth="48dp"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4" app:layout_constraintStart_toStartOf="@+id/button7"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button7"
            android:minWidth="48dp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button8" app:layout_constraintStart_toEndOf="@+id/button4"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:minWidth="48dp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6" app:layout_constraintStart_toEndOf="@+id/button5" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button9"
            android:minWidth="48dp"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_input"
            android:minWidth="48dp"
            app:layout_constraintStart_toStartOf="@+id/edt_input"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            app:layout_constraintBaseline_toBaselineOf="@+id/button7" app:layout_constraintStart_toEndOf="@+id/button7"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:minWidth="48dp"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            app:layout_constraintBaseline_toBaselineOf="@+id/button8" app:layout_constraintStart_toEndOf="@+id/button8"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:minWidth="48dp"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1" app:layout_constraintStart_toStartOf="@+id/button4"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            android:minWidth="48dp"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttondot" app:layout_constraintStart_toEndOf="@+id/button0"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            android:minWidth="48dp"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonequals"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button3" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/buttondot"
            android:minWidth="48dp"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttondivide" app:layout_constraintStart_toEndOf="@+id/button9"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:minWidth="48dp"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonmultiply"
            app:layout_constraintStart_toEndOf="@+id/button6"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttondivide" app:layout_constraintEnd_toEndOf="@+id/buttondivide"
            android:minWidth="48dp"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:id="@+id/buttonsubtract"
            app:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonmultiply"
            app:layout_constraintEnd_toEndOf="@+id/buttonmultiply"
            android:minWidth="48dp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonadd" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonsubtract" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/buttonequals"
            app:layout_constraintEnd_toEndOf="@+id/buttonsubtract"
            android:minWidth="48dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_symbol"
            app:layout_constraintBaseline_toBaselineOf="@+id/edt_input"
            app:layout_constraintEnd_toStartOf="@+id/edt_input" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="NEG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonnegate" app:layout_constraintStart_toEndOf="@+id/buttondivide"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttondivide" android:minWidth="48dp"/>
</android.support.constraint.ConstraintLayout>