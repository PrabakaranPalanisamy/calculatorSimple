<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity" android:minWidth="48dp">
    <Button
            android:text="C"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonclear"
            app:layout_constraintBottom_toTopOf="@+id/guideline6" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline7" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/edt_result"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:focusable="false"
            android:editable="false"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:background="@null"
            android:keepScreenOn="true" android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline9" app:layout_constraintHorizontal_bias="0.49"
            android:textStyle="bold" android:padding="8sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/edt_input"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@null"
            android:textSize="24sp" android:layout_margin="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline8" app:layout_constraintStart_toEndOf="@+id/txt_symbol"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            android:textAlignment="viewEnd"
            android:gravity="end"
            app:layout_constraintTop_toTopOf="@+id/guideline9" android:padding="8sp"/>
    <Button
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <Button
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button2"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/guideline6" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <Button
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button3"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/guideline6" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toEndOf="@+id/button2" android:layout_marginStart="8dp"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <Button
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button4"
            app:layout_constraintBottom_toTopOf="@+id/guideline6" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline7" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <Button
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button5"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintTop_toTopOf="@+id/guideline7" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <Button
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button6"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintTop_toTopOf="@+id/guideline7" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <Button
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/guideline8"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <Button
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button8"
            app:layout_constraintTop_toTopOf="@+id/guideline8"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <Button
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button9"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"
            app:layout_constraintTop_toTopOf="@+id/guideline8" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <Button
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button1"
            app:layout_constraintBottom_toTopOf="@+id/guideline5" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline6" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <Button
            android:text="."
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttondot"
            app:layout_constraintTop_toTopOf="@+id/guideline5" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <Button
            android:text="="
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonequals"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline4"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <Button
            android:text="/"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttondivide"
            app:layout_constraintEnd_toStartOf="@+id/guideline4" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline8"
            app:layout_constraintBottom_toTopOf="@+id/guideline7" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <Button
            android:text="*"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonmultiply"
            app:layout_constraintBottom_toTopOf="@+id/guideline6" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toTopOf="@+id/guideline7"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <Button
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonsubtract"
            app:layout_constraintBottom_toTopOf="@+id/guideline5" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <Button
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonadd"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_symbol"
            app:layout_constraintBaseline_toBaselineOf="@+id/edt_input"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="24sp"/>
    <Button
            android:text="NEG"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonnegate"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline8"
            app:layout_constraintBottom_toTopOf="@+id/guideline7" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            android:textColor="@android:color/white" android:background="@drawable/button_border"
            android:layout_margin="0dp" android:textSize="18sp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.2"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.4"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.6"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.8"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline5"
                                          android:orientation="horizontal"
                                          android:background="@drawable/button_border"
                                          app:layout_constraintGuide_percent="0.8508892"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline6"
                                          android:orientation="horizontal"
                                          android:background="@drawable/button_border"
                                          app:layout_constraintGuide_percent="0.70"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline7"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.55"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline8"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.40218878"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline9"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.2"/>
</android.support.constraint.ConstraintLayout>